
pipeline {
    agent {
        node {
            label 'ubuntu18.04_builder_fast_track'
        }
    }
    environment {
        AD = credentials('jenkins_ad')
    }
    stages {
        stage('Build') {
            steps {
                sh 'make clean'
                sh 'make debs'
            }
        }
        stage('Push') {
            steps {
                sh 'make upload'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
